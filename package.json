  "bugs": {
    "url": "https://github.com/pueteam/kudujs/issues"
  },
  "homepage": "https://github.com/pueteam/kudujs#readme",
  "dependencies": {
    "node-addon-api": "^1.7.1",
    "node-pre-gyp": "^0.13.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "node-gyp": "^6.0.0"
