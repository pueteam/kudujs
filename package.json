{
  "name": "kudujs",
  "version": "1.0.0",
  "description": "NodeJS addon for Apache Kudu",
  "main": "index.js",
  "gypfile": true,
  "scripts": {
    "test": "node test.js",
    "build": "node-gyp rebuild",
    "clean": "node-gyp clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pueteam/kudujs.git"
  },
  "binary": {
    "module_name": "kudujs",
